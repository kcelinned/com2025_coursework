/ Form partial that can be used in several views /

= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .txt
    = f.label :title
    = f.text_field :title, :id => "txt"
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :start
    = f.time_select :start
  .field
    = f.label :end
    = f.time_select :end
  .txt
    = f.label :location
    = f.text_area :location, :id => "txt1"
  .txt
    = f.label :description
    = f.text_area :description, :id => "txt2"
  .actions
    = f.submit t('save')
  #reset
    %button{name: "button", type: "button"} Clear
